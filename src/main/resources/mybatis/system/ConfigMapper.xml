<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.system.dao.ConfigDao">

	<select id="get" resultType="com.bootdo.system.domain.ConfigDO">
		select `id`,`key`,`value`,`status`,`remark` from sys_config where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.system.domain.ConfigDO">
		select `id`,`key`,`value`,`status`,`remark` from sys_config
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="key != null and key != ''"> and `key` = #{key} </if>
		  		  <if test="value != null and value != ''"> and `value` = #{value} </if>
		  		  <if test="status != null and status != ''"> and `status` = #{status} </if>
		  		  <if test="remark != null and remark != ''"> and remark = #{remark} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from sys_config
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="key != null and key != ''"> and key = #{key} </if>
		  		  <if test="value != null and value != ''"> and value = #{value} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		  <if test="remark != null and remark != ''"> and remark = #{remark} </if>
		  		</where>
	</select>

	<select id="getConfigsByKey" resultType="com.bootdo.system.domain.ConfigDO">
		select `id`,`key`,`value`,`status`,`remark` from sys_config t
		<where>
			<if test="keys != null and keys.size()>0 ">
				t.key in
				<foreach item="key" collection="keys" index="index" open="(" separator="," close=")">
					#{key}
				</foreach>
			</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.system.domain.ConfigDO" useGeneratedKeys="true" keyProperty="id">
		insert into sys_config
		(
			`key`, 
			`value`, 
			`status`, 
			`remark`
		)
		values
		(
			#{key}, 
			#{value}, 
			#{status}, 
			#{remark}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.system.domain.ConfigDO">
		update sys_config 
		<set>
			<if test="key != null">`key` = #{key}, </if>
			<if test="value != null">`value` = #{value}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from sys_config where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from sys_config where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>