<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.baseinfo.dao.AccountadjustDao">

	<select id="get" resultType="com.bootdo.baseinfo.domain.AccountadjustDO">
		select `id`,`aid`,`username`,`IsIncome`,`DealMoney`,`remark` from use_accountadjust where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.baseinfo.domain.AccountadjustDO">
		select `id`,`aid`,`username`,`IsIncome`,`DealMoney`,`remark` from use_accountadjust
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="aid != null and aid != ''"> and aid = #{aid} </if>
		  		  <if test="username != null and username != ''"> and username = #{username} </if>
		  		  <if test="isincome != null and isincome != ''"> and IsIncome = #{isincome} </if>
		  		  <if test="dealmoney != null and dealmoney != ''"> and DealMoney = #{dealmoney} </if>
		  		  <if test="remark != null and remark != ''"> and remark = #{remark} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from use_accountadjust
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="aid != null and aid != ''"> and aid = #{aid} </if>
		  		  <if test="username != null and username != ''"> and username = #{username} </if>
		  		  <if test="isincome != null and isincome != ''"> and IsIncome = #{isincome} </if>
		  		  <if test="dealmoney != null and dealmoney != ''"> and DealMoney = #{dealmoney} </if>
		  		  <if test="remark != null and remark != ''"> and remark = #{remark} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.baseinfo.domain.AccountadjustDO" useGeneratedKeys="true" keyProperty="id">
		insert into use_accountadjust
		(
			`aid`, 
			`username`, 
			`IsIncome`, 
			`DealMoney`, 
			`remark`
		)
		values
		(
			#{aid}, 
			#{username}, 
			#{isincome}, 
			#{dealmoney}, 
			#{remark}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.baseinfo.domain.AccountadjustDO">
		update use_accountadjust 
		<set>
			<if test="aid != null">`aid` = #{aid}, </if>
			<if test="username != null">`username` = #{username}, </if>
			<if test="isincome != null">`IsIncome` = #{isincome}, </if>
			<if test="dealmoney != null">`DealMoney` = #{dealmoney}, </if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from use_accountadjust where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from use_accountadjust where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>